<div id="header" class="container col-6">
  <h1>Bob's Burgers!</h1>
</div>
<br>
<img id="bobs-img" src="" alt="">


<div class="container">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <h2 class="h2">Burgers You Have Not Devoured!</h2>
      <div>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <h2 id="h2">Burgers You Have Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
          <h5 class="card-header">Add Your Own Burger!</h5>
        <div class="card-body">
            <form class="create-form">
              <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input   type="text" id="burger" name="name">
              </div>
              </div>
                <button class="btn btn-info btn-lg btn-block" type="submit">Add burger</button>
              </form>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
<br>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h5 class="card-header">Add Some of Bobs Favorite Burgers!</h5>
          <div class="card-body">
            <form class="pre-sel" id="burger-form">
              {{!-- button for pretyped out burgers --}}
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="burger" id="burger1" value="I've Created a Muenster Burger"
                  checked>
                <label class="form-check-label" for="inlineRadio1">I've Created a Muenster Burger</label>
              </div>
              <br>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="burger" id="burger2" value="'New Bacon-ings' (comes with bacon)">
                <label class="form-check-label" for="inlineRadio2">"New Bacon-ings" (comes with bacon)</label>
              </div>
              <br>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="burger" id="burger2" value="Poblano Picasso Burger">
                <label class="form-check-label" for="inlineRadio2">Poblano Picasso Burger</label>
              </div>
              <br>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="burger" id="burger2" value="Jingle Bell Pepper Burger">
                <label class="form-check-label" for="inlineRadio2">Jingle Bell Pepper Burger</label>
              </div>
              <br>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="burger" id="burger2" value="Mesclun Around Burger">
                <label class="form-check-label" for="inlineRadio2">Mesclun Around Burger</label>
              </div>
              <br>
              <button class="btn btn-info btn-lg btn-block" id="add-burger" type="submit">Add Your Burger</button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>

