<div class="container col-2">
  <h1>burgers!</h1>
</div>
<br>
<img id="bobs-img" src="" alt="">


<div class="container">
  <div class="row">
    <div class="col-md-6 col-xs-12">
      <h2>Burgers you have not devoured!</h2>
      <div>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <h2>burgers you have been devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burgers-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h5 class="card-header">Add your own Burger!</h5>
          <div class="card-body">
            <form class="create-form">
              <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
              </div>
            <button class="btn btn-primary" type="submit">Add burger</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

